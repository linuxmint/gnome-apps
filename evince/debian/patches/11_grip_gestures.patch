+_oif_ev_view_drag (EvView  *view,
+		    gdouble  x,
+		    gdouble  y)
+{
+	gdouble value;
+
+	value = gtk_adjustment_get_value (view->vadjustment);
+	value = CLAMP (value + y, 0,
+		       gtk_adjustment_get_upper (view->vadjustment) - gtk_adjustment_get_page_size (view->vadjustment));
